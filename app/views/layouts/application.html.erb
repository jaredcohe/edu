<!DOCTYPE html>
<html>
<head>
  <title>Edu</title>
  <%= stylesheet_link_tag "application", :media => "all" %>
  <%= javascript_include_tag "application" %>
  <%= csrf_meta_tags %>
</head>
<body>
  <p><%= notice %></p>

  <div class="navbar navbar-inverse">
    <div class="navbar-inner">
      <%= link_to 'SEEDTAP', :root, :class => "brand" %>
      <ul class="nav">
        <li class="<%= ('active' if controller.controller_name == 'resources' && controller.action_name == 'home') %>">
          <%= link_to :root do %>
            <i class="icon-home icon-white"></i> Home
          <% end %>
        </li>
        <% if current_user %>
          <li>
          <%= link_to logout_path, method: "delete" do %>
            <i class="icon-off icon-white"></i> Log Out
          <% end %>
          </li>
        <% else %>
          <li><%= link_to "Sign Up", signup_path %></li>
          <li>
            <%= link_to login_path do %>
              <i class="icon-off icon-white"></i> Log In
            <% end %>
          </li>
        <% end %>
      </ul>
      <%= link_to 'Add Resource', '#add_resource', :role => 'button', 'data-toggle' => 'modal', :class => 'btn btn-inverse pull-right' %>
      <!-- Modal -->
      <div id="add_resource" class="modal hide fade" tabindex="-1" role="dialog" aria-labelledby="myModalLabel" aria-hidden="true">
        <div class="modal-header">
          <button type="button" class="close" data-dismiss="modal" aria-hidden="true">Ã—</button>
          <h3 id="myModalLabel">Add A Resource</h3>
        </div>
        <div class="modal-body">
          <% if current_user %>
            <%= render 'resources/small_form' %>
            </div>
          <% else %>
            <p><%= link_to "Log in", login_path %> to add a resource.</p>
            </div>
          <% end %>
      </div>
    </div>
  </div>
  <div>
    <%= yield %>
  </div>
</body>
</html>
