<div id='bottom'>

  <div id="resources">
    <% if params.include?('search') && params[:search] != '' %>
      <%= "Results: #{@resources.length}" %>
    <% end %>
    <h1 class='resource_header orange_header'>Resources</h1>
    <table class='resources_table'>
      <tr>
        <th>Title</th>
        <th>Description</th>
        <th>Tags</th>
        <th>Score</th>
      </tr>
      <%- @resources.each do |resource| %>
        <tr>
          <td class="title_column">
            <%= link_to truncate(resource.title_from_user? ? resource.title_from_user : resource.title_from_source, :length => 60), resource, :class => 'resource_link' %>
          </td>
          <td class="description_column"><%= truncate(resource.description_from_user? ? resource.description_from_user : resource.description_from_source, :length => 60) %></td>
          <td class="keywords_column"><%= resource.keywords_for_view %></td>
          <td class="score_column">Score Placeholder</td>
        </tr>
      <% end %>
    </table>
  </div>
</div>


