<%= form_for @resource, :html => { :class => 'form-horizontal' } do |f| %>
  <% if @resource.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(@resource.errors.count, "error") %> prohibited this resource from being saved:</h2>

      <ul>
      <% @resource.errors.full_messages.each do |msg| %>
        <li><%= msg %></li>
      <% end %>
      </ul>
    </div>
  <% end %>
  
  <div class='row-fluid text-center'><%= f.submit 'Save' %></div>
  <div class='row-fluid'>
    <div class='span8 offset2'>
      <div class='control-group'>
        <%= f.label 'URL', :class => 'control-label' %>
        <div class='controls'>
          <%= link_to @resource.raw_url, @resource.raw_url, :target => '_blank' %>
        </div>
      </div>

      <div class='control-group'>
        <%= f.label :provider, :class => 'control-label'  %>
          <div class='controls'><%= f.text_field :provider %></div>
      </div>
      <div class="control-group">
        <%= f.label :title_from_user, :class => 'control-label'  %>
        <div class='controls'><%= f.text_area :title_from_user %></div>
      </div>
      <div class="control-group" id='tt'>
        <%= f.label :title_from_source, :class => 'control-label'  %>
        <div class='controls'><%= f.text_area :title_from_source %></div>
      </div>
      <div class="control-group">
        <%= f.label :description_from_user, :class => 'control-label'  %>
        <div class='controls'><%= f.text_area :description_from_user %></div>
      </div>
      <div class="control-group">
        <%= f.label :description_from_source, :class => 'control-label'  %>
        <div class='controls'><%= f.text_area :description_from_source %></div>
      </div>
      <div class="control-group">
        <%= f.label :keywords_from_user, :class => 'control-label'  %>
        <div class='controls'><%= f.text_area :keywords_from_user %></div>
      </div>
    </div>
  </div>
<% end %>