<h1>Listing resources</h1>

<table>
  <tr>
    <th>Title manual</th>
    <th>Title scraped</th>
    <th>Raw url</th>
    <th>Clean url</th>
    <th>Description</th>
    <th>Keywords manual</th>
    <th>Keywords scraped</th>
    <th>User</th>
    <th></th>
    <th></th>
    <th></th>
  </tr>

<% @resources.each do |resource| %>
  <tr>
    <td><%= resource.title_manual %></td>
    <td><%= resource.title_scraped %></td>
    <td><%= resource.raw_url %></td>
    <td><%= resource.clean_url %></td>
    <td><%= resource.description %></td>
    <td><%= resource.keywords_manual %></td>
    <td><%= resource.keywords_scraped %></td>
    <td><%= resource.user_id %></td>
    <td><%= link_to 'Show', resource %></td>
    <td><%= link_to 'Edit', edit_resource_path(resource) %></td>
    <td><%= link_to 'Destroy', resource, method: :delete, data: { confirm: 'Are you sure?' } %></td>
  </tr>
<% end %>
</table>

