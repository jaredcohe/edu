<p><%= link_to 'New Resource', new_resource_path %></p>

<h1>Listing resources</h1>

<table>
  <tr>
    <th>ID</th>
    <th>Title from user</th>
    <th>Title from source</th>
    <th>Provider</th>
    <th>Raw url</th>
    <th>Description from user</th>
    <th>Description from source</th>
    <th>Keywords from user</th>
    <th>Keywords from source</th>
    <th>User</th>
    <th></th>
    <th></th>
    <th></th>
  </tr>

<% @resources.each do |resource| %>
  <tr>
    <td><%= resource.id %></td>
    <td><%= resource.title_from_user %></td>
    <td><%= link_to resource.title_from_source, resource.raw_url, :target => "_blank" %></td>
    <td><%= resource.provider %></td>
    <td><%= resource.raw_url %></td>
    <td><%= resource.description_from_user %></td>
    <td><%= resource.description_from_source %></td>
    <td><%= resource.keywords_from_user %></td>
    <td><%= resource.keywords_from_source %></td>
    <td><%= resource.user_id %></td>
    <td><%= link_to 'Show', resource %></td>
    <td><%= link_to 'Edit', edit_resource_path(resource) %></td>
    <td><%= link_to 'Destroy', resource, method: :delete, data: { confirm: 'Are you sure?' } %></td>
  </tr>
<% end %>
</table>

