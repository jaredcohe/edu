<%= form_tag sessions_path do %>
  <%#= hidden_field_tag :destination_controller, @destination_controller || params[:controller] %>
  <%#= hidden_field_tag :destination_action, @destination_action || params[:action] %>
  <fieldset>
    <legend>Log In</legend>
      <%= label_tag :email %>
      <%= text_field_tag :email, params[:email] %>

      <%= label_tag :password %>
      <%= password_field_tag :password %><br />
      <%= link_to "Forgot password", new_password_reset_path %><br /><br />

      <label class="checkbox">
        <%= check_box_tag :remember_me, 1, params[:rememeber_me] %>Remember me
      </label><br />
    <button class="btn">Sign in</button>
  </fieldset>
<% end %>
